{% import "inc/macro.njk" as M %}

{# Title #}
{% if not title %}
    {% set title = "Default" %}
{% endif %}

<!DOCTYPE html>
<html lang="ru" {% if htmlClass %}class="{{ htmlClass | trim }}"{% endif %}>
    <head>
        <meta charset="utf-8">
        <title>{{ title }}</title>

        <meta name="description" content="description"/>
        <meta name="author" lang="ru" content="Author" />
        <meta name="copyright" content="Copyright" />
        <link rel="shortcut icon" href="favicon.ico">

        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
	    <meta name="viewport" content="<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />" />


        <link rel="stylesheet" href="css/main.css?v={{ timestamp }}">
    </head>
    <body {% if bodyClass %}class="{{ bodyClass | trim }}"{% endif %}>

        <div id="wrapper">
            {% block content %}{% endblock %}
        </div>

        {# Main #}
        <script src="js/main.js?v={{ timestamp }}"></script>
    </body>
</html>
