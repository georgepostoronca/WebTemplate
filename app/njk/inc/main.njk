{% import "inc/macro.njk" as M %}

{# Title #}
{% if not title %}
    {% set title = "Default" %}
{% endif %}

{# CSS Map #}
{% set cssMap = true %}

<!DOCTYPE html>
<html lang="ru" {% if htmlClass %}class="{{ htmlClass | trim }}"{% endif %}>
    <head>
        <meta charset="utf-8">
        <title>{{ title }}</title>

        <meta name="description" content="description"/>
        <meta name="author" lang="ru" content="Author" />
        <meta name="copyright" content="Copyright" />
        <link rel="shortcut icon" href="favicon.ico">

        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
	    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />


        <link rel="stylesheet" href="css/main.css?v={{ timestamp }}">
    </head>
    <body {% if bodyClass %}class="{{ bodyClass | trim }}"{% endif %}>

        <div id="wrapper">
            {% include "block/header.njk" %}

            <!-- Container -->
            <div id="container">
                {% block content %}{% endblock %}
            </div>

            {% include "block/footer.njk" %}

        </div>


        <script src="js/include/jquery-3.0.0.min.js"></script>
        <script src="js/include/jquery.maskedinput.min.js"></script>
        <script src="js/include/svg4everybody.min.js"></script>

        {# Main #}
        <script src="js/main.js?v={{ timestamp }}"></script>
        <script>svg4everybody();</script>
    </body>
</html>
